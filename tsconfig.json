{
  "compilerOptions": {
    "target": "ES2022",                        // Compatível com top-level await e import.meta
    "module": "ES2022",                        // ESM puro
    "lib": ["ES2022"],
    "moduleResolution": "bundler",             // Necessário para lidar corretamente com ESM + import.meta
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",

    // Decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Paths (alias)
    "paths": {
      "@api/*": ["src/api/*"],
      "@core/*": ["src/core/*"],
      "@database/*": ["src/database/*"],
      "@worker/*": ["src/worker/*"]
    },

    // Types
    "types": ["node"],

    // Emissão
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,

    // Interop e compatibilidade
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // Build otimizado
    "incremental": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo", // Pode remover se não quiser gerar

    // Segurança e consistência
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,

    // Regras de tipagem (ajuste conforme necessário)
    "strict": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,

    // Outros
    "noLib": false
  },

  "include": ["src/**/*.ts"],
  "exclude": ["dist"],

  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
